<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:strokeWidth="0dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stock_card">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:background="@drawable/drawable_reg"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:text="@string/reg"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textAppearance="@style/reg"
        />


    <TextView
        android:id="@+id/shariah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/drawable_reg"
        android:backgroundTint="@color/md_theme_primary"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:text="@string/sariah"
        android:textAppearance="@style/reg"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/reg" />


    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/wtl"
        android:textAppearance="@style/wtl"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/companyName"
        android:textAppearance="@style/companyName"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/symbol"
        app:layout_constraintTop_toBottomOf="@+id/symbol" />


    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume"
        android:textAppearance="@style/volume"
        app:layout_constraintStart_toStartOf="@+id/symbol"
        app:layout_constraintTop_toBottomOf="@+id/companyName" />


    <TextView
        android:id="@+id/weeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="10sp"
        android:text="@string/weeks"
        android:textAppearance="@style/weeks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="8dp"
        android:layout_height="7dp"
        android:src="@drawable/drop_up"
        app:layout_constraintBottom_toBottomOf="@+id/high_52"
        app:layout_constraintStart_toStartOf="@+id/weeks"
        app:layout_constraintTop_toBottomOf="@+id/weeks" />


    <TextView
        android:id="@+id/high_52"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/high_52"
        android:textAppearance="@style/high_52"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/weeks" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="8dp"
        android:layout_height="7dp"
        android:src="@drawable/drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/low_52"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/low_52" />

    <TextView
        android:id="@+id/low_52"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lineSpacingExtra="-12sp"
        android:text="@string/low_52"
        android:textAppearance="@style/low_52"
        app:layout_constraintEnd_toEndOf="@+id/high_52"
        app:layout_constraintStart_toStartOf="@+id/high_52"
        app:layout_constraintTop_toBottomOf="@+id/high_52" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/volume"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/valueTrade"
        app:srcCompat="@drawable/vertical_separator" />

    <TextView
        android:id="@+id/valueTrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:text="@string/valueTrade"
        android:textAppearance="@style/valueTrade"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/netChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/netChange"
        android:textAppearance="@style/netChange"
        app:layout_constraintEnd_toEndOf="@+id/valueTrade"
        app:layout_constraintTop_toBottomOf="@+id/valueTrade" />


    <TextView
        android:id="@+id/high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high"
        android:textAppearance="@style/high_stock"
        app:layout_constraintEnd_toEndOf="@+id/netChange"
        app:layout_constraintTop_toBottomOf="@+id/netChange" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="8dp"
        android:layout_height="6.5dp"
        android:src="@drawable/drop_up"
        app:layout_constraintBottom_toBottomOf="@+id/high"
        app:layout_constraintEnd_toStartOf="@+id/high"
        app:layout_constraintTop_toTopOf="@+id/high" />

    <TextView
        android:id="@+id/low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:gravity="end"
        android:text="@string/low"
        android:textAppearance="@style/low_stock"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/netChange" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="8dp"
        android:layout_height="6.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/low"
        app:layout_constraintEnd_toStartOf="@+id/low"
        app:layout_constraintTop_toTopOf="@+id/low"
        app:srcCompat="@drawable/drop_down" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/vertical_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume" />

    <TextView
        android:id="@+id/bid_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="top"
        android:text="@string/bid_vol_100"
        android:textAppearance="@style/bid_vol_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />


    <TextView
        android:id="@+id/bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="1dp"
        android:gravity="end"
        android:text="@string/bid_2_78"
        android:textAppearance="@style/bid_vol_100"
        app:layout_constraintBottom_toBottomOf="@+id/bid_vol"
        app:layout_constraintStart_toEndOf="@+id/bid_vol"
        app:layout_constraintTop_toTopOf="@+id/bid_vol" />

    <TextView
        android:id="@+id/ask_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:text="@string/ask_vol_2_2"
        android:textAppearance="@style/ask_vol"
        app:layout_constraintBottom_toBottomOf="@+id/bid"
        app:layout_constraintEnd_toEndOf="@+id/low_52"
        app:layout_constraintTop_toTopOf="@+id/bid" />


    <TextView
        android:id="@+id/ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:gravity="end"

        android:text="@string/ask_0_78"
        android:textAppearance="@style/ask_vol"
        app:layout_constraintBottom_toBottomOf="@+id/bid"
        app:layout_constraintEnd_toStartOf="@+id/ask_vol"
        app:layout_constraintTop_toTopOf="@+id/bid"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>