<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/index_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textAppearance="@style/index_value_22sp"
        android:text="@string/index_value" />

    <ImageView
        android:id="@+id/image_drop_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/index_value"
        android:layout_alignTop="@id/index_value"
        android:layout_alignBottom="@id/index_value"
        android:layout_centerVertical="true"
        android:src="@drawable/drop_up"
        />
</RelativeLayout>